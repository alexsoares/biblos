<% form_for(@jogo) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas" width="80%" align="center">
  <tr>
   <td colspan="2" align="left">
     <font  size=5><b> CADASTRO DE JOGOS</b></font>
   </td>
  </tr>
  <tr>
    <td>
      <fieldset><legend><font  size=4> Jogo</font></legend>
        <table>
           <tr>
              <td align="left"><b>Tombo (SEDUC):</b></td>
              <td align="left" colspan="2"><font color="blue"><b><%=h @jogo.id %></b></font></td>
              <td align="left" colspan="5"><b>Tombo (Local):</b><%= f.text_field :tombo, :size =>15 %></td>
           </tr>
           <tr>
              <td align="left"><b> Título:</b></td>
              <td align="left"colspan="7"><%= f.text_field :nome, :size =>74 %></td>
           </tr>
           <tr>
              <td align="left"><b>Fabricante:</b></td>
              <td align="left"colspan="3"><%= f.text_field :fabricante, :size =>40 %></td>
              <td align="left"colspan="4"><b>Faixa Etária:</b>
               <%= f.select :faixaetaria, FAIXAETARIA.sort {|e0,e1| e0[0] <=> e1[0]}, :include_blank => '---Selecione---'%></td>
           </tr>

           <tr>
               <td align="left" valign="top"><b>Descrição:</b></td>
               <td align="left" colspan="7"><%= f.text_area(:descricao, :cols =>"95", :rows => "2") %></td>
           </tr>

            <tr>
             <td align="left"><b>Forma Aquisição:</b></td>
              <td align="left" colspan="2"><%= f.select :aquisicao, FORMAAQUISICAO.sort {|e0,e1| e0[0] <=> e1[0]}, :include_blank => '---Selecione---'%></td>
              <td align="right"><b>Data Aquisição:</b></td>
               <td align="left" colspan="4"><%= f.date_select(:dataaquisicao, :order => [:day, :month, :year], :start_year => (Date.today.year)-20) %></td>
            </tr>
            <tr>
               <td align="left"><b>Localização:</b></td>
               <td align="left"> <%= f.text_field :localguardado, :size =>15%></td>
               <td align="right"><b>Unidade:</b></td>
               <td align="left" colspan="5"><%= f.collection_select  :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
            </tr>
            <tr>
               <td align="left" valign="top"><b>Observações:</b></td>
               <td align="left" colspan="7"><%= f.text_area(:obs, :cols =>"85", :rows => "2") %></td>
            </tr>
       </table>
      </fieldset>
      <table>
          <tr>
            <div id='Certeza'>
               <td align="left" width="8%"><%= f.submit "Salvar" %></td>
            </div>
            <% end %>
            <td align="left" ><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
          </tr>
      </table>
 </table>
</font>
