            <th>Nome</th>
            <th>Ensino</th>
            <th>Endereco</th>
            <th>Num</th>
            <th>Bairro</th>
            <th>Fone</th>

          </tr>
          <tr>
            <td><%=h unidades.nome %></td>
            <td><%=h unidades.tipo.nome %></td>
            <td><%=h unidades.endereco %></td>
            <td><%=h unidades.num %></td>
