<br/>
 <table  class="tabelas"   align="center" width="100%">
   <tr>
      <td align="left">
         <font  size=5><b> ACERVO AUDIOVISUAL</b></font>
      </td>
   </tr>
   <tr>
     <td colspan="2">
        <br/>
        <div class="botao">
        <table width="100%" align="center">
          <tr>
             <td width="6%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
             <td width="6%" align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
             <td align="right" width="25%" >
                 <font color ="red "size="2">
                    <b> Total:<%= @audiovisuais.count %></b>
                  </font>
             </td>
             <td align="right">
               <font  size="4" color="black"> Título: </font>

               <div class="botao">
                <table>
                  <tr>
                    <% form_tag titulo_path, :method => 'get' do %>
                     <td align="right"><font size="4"> Digitar Titulo:</font>
                       <%= collection_select :audiovisuai, :audiovisuai_id, @audiovisuais, :id, :titulo, :include_blank => ' -- Selecione -- '  %>
                       <%= submit_tag "Filtrar", :titulo => nil %>
                     </td>
                    <% end %>
                  </tr>
                </table>
                </div>




             </td>
         </tr>
         <tr>
           <% if  $var == 0 then %>
             <td align="left" colspan="4"><%= will_paginate @audiovisuais %></td>
           <%end%>
         </tr>
       </table>
       <br/>
       </div>
       <font  size="2">
       <table border="2" width="100%">
          <tr>
            <th>Tombo</th>
            <th>Midia</th>
            <th>Título</th>
            <th>Coleção</th>
            <th>Gênero</th>
            <th>Localização</th>
            <th>Unidade</th>
          </tr>
         <% @audiovisuais.each do |audiovisuai| %>
          <tr>
            <td><%=h audiovisuai.tombo %></td>
            <td><%=h audiovisuai.midia.nome %></td>
            <td><%=h audiovisuai.titulo %></td>
            <td><%=h audiovisuai.colecao %></td>
            <td><%=h audiovisuai.generomidia.nome %></td>
            <td><%=h audiovisuai.localguardado %></td>
            <td><%=h audiovisuai.unidade.nome %></td>

        </tr>
      <tr>
         <td colspan="12">
           <div class="botao">
            <table >
             <td><%= button_to('Exibir',{:action => "show", :id =>audiovisuai}, :method => "get") %></td>
               <% if current_user.has_role?('administrador') or current_user.has_role?('bibliotecario') %>
                  <td> <%= button_to('Editar',{:action => "edit", :id =>audiovisuai}, :method => "get") %></td>
                     <% if current_user.has_role?('administrador')%>
                       <td><%= button_to('Excluir',{:action => "destroy", :id =>audiovisuai}, :confirm => 'Confirma exclusão?', :method => "delete")%></td>
                     <%end%>
               <%end%>
             </table>
           </div>
           </td>
        </tr>
        <% end %>
       </table>
       <div class="botao">
         <table width="100%" align="left">
           <br/>
          <tr>
              <td width="8%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
              <td align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
              <% if  $var == 0 then %>
                 <td align="left" colspan="3"><%= will_paginate @audiovisuais %></td>
              <%end%>

        </table>
        </div>
     </font>
  </table>
<br/>




