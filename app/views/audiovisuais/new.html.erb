<br/><br/>
<% form_for(@audiovisuai) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas" width="80%" align="center">
  <tr>
   <td colspan="2" align="left">
     <font  size=5><b> CADASTRO DE AUDIOVISUAIS</b></font>
   </td>
  </tr>
  <tr>
    <td>
      <fieldset><legend><font  size=4> Audiovisual</font></legend>
        <table border="2">
            <tr>
              <td align="left"><b>Tombo (Local):</b></td><td align="left" colspan="5"><%= f.text_field :tomboL, :size =>15 %></td>
           </tr>
           <tr>
              <td align="left"><b>Tipo Midia:</b></td>
              <td align="left"><%= f.select :tipo, TIPOSMIDIA.sort {|e0,e1| e0[0] <=> e1[0]}, :include_blank =>'---Selecione---'%></td>
              <td align="left"><b>Gênero:</b><%= f.collection_select  :generomidia_id, @generos, :id, :nome, :include_blank => ' -- Selecione -- ' %>
           </tr>
              <%= observe_field 'audiovisuai_generomidia_id',
               :update => "check",
               :url    => { :action => 'camposmusicas' },
               :with   => 'audiovisuai_generomidia_id' %>
           <tr>
               <td align="left"><b> Título:</b></td><td align="left" colspan="7" ><%= f.text_field :titulo, :size =>60 %></td>
           </tr>
           <tr>
               <td align="left"><b> Subtítulo:</b></td><td align="left" colspan="7" ><%= f.text_field :subtitulo, :size =>60 %></td>
           </tr>
           <tr>
               <td align="left"><b> Coleção:</b></td>
               <td align="left" colspan="4" ><%= f.text_field :colecao, :size =>60 %></td>
           </tr>
           <tr>
             <td align="left" colspan="5" >
               <div id="check"></div>
              <div id="campos" style="display:none">
                <% f.fields_for :musicas do |builder| %>
                  <%= render "musica", :f => builder %>
                <%end%>
              </div></td>
           </tr>
            
           <tr>
               <td align="left"><b> Produção:</b></td>
               <td align="left" colspan="2"><%= f.text_field :producao, :size =>60%>
           </tr>
           <tr>
              <td align="left"><b>Local Produção:</b></td>
              <td align="left"><%= f.text_field :localproducao, :size =>22%>
              <td align="left"><b>Ano Produção:</b><%= f.date_select(:dataproducao, :order => [:year], :start_year => (Date.today.year)-100) %>
           </tr>
           <tr>
               <td align="left" colspan="8">
                  <% f.fields_for :localizacaos do |builder| %>
                      <%= render "dadoslocalizacao", :f => builder %>
                  <% end %>
               </td>
           </tr>
            <tr >
               <td align="left" valign="top"><b>Observações:</b></td>
               <td align="left" colspan="7  "><%= f.text_area(:obs, :cols =>"75", :rows => "2") %></td>
            </tr>
       </table>
      </fieldset>
      <table>
          <tr>
            <div id='Certeza'>
               <td align="left" width="8%"><%= f.submit "Salvar" %></td>
            </div>
            <% end %>
            <td align="left" ><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
          </tr>
      </table>
 </table>
</font>

