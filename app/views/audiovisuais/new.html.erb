<br/><br/>
<% form_for(@audiovisuai) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas" width="80%" align="center">
  <tr>
   <td colspan="2" align="left">
     <font  size=5><b> CADASTRO DE AUDIOVISUAIS</b></font>
   </td>
  </tr>
  <tr>
    <td>
      <fieldset><legend><font  size=4> Audiovisual</font></legend>
        <table>
            <tr>
              <td align="left"><b>Tombo (Local):</b></td><td align="left" colspan="5"><%= f.text_field :tombo, :size =>15 %></td>
           </tr>
           <tr>
              <td align="left"><b>Tipo Midia:</b></td>
              <td align="left"><%= f.select :tipo, TIPOSMIDIA.sort {|e0,e1| e0[0] <=> e1[0]}, :include_blank => '---Selecione---'%></td>
              <td align="left"><b>Gênero:</b></td>
              <td align="left" colspan="4"><%= f.collection_select  :generomidia_id, @generomidias, :id, :nome, :include_blank => ' -- Selecione -- ' %>
           </tr>
           <tr>
               <td align="left"><b> Título:</b></td><td align="left" colspan="7" ><%= f.text_field :titulo, :size =>76 %></td>
           </tr>
           <tr>
               <td align="left"><b> Subtítulo:</b></td><td align="left" colspan="7" ><%= f.text_field :subtitulo, :size =>76 %></td>
           </tr>
           <tr>
               <td align="left"><b> Coleção:</b></td>
               <td align="left" colspan="4" ><%= f.text_field :colecao, :size =>40 %></td>
               <td align="right"><b> Produção:</b></td>
               <td align="left"><%= f.text_field :producao, :size =>21%>
           </tr>
           <tr>
              <td align="left"><b>Local Produção:</b></td>
              <td align="left" colspan="2"><%= f.text_field :localproducao, :size =>22%>
              <td align="right" colspan="3"><b>Ano Produção:</b></td>
              <td align="left" colspan="2"><%= f.date_select(:dataproducao, :order => [:year], :start_year => (Date.today.year)-100) %>
           </tr>
            <tr>
             <td align="left"><b>Forma Aquisição:</b></td>
              <td align="left" colspan="2"><%= f.select :aquisicao, FORMAAQUISICAO.sort {|e0,e1| e0[0] <=> e1[0]}, :include_blank => '---Selecione---'%></td>
              <td align="right"><b>DataAquisição:</b></td>
               <td align="left" colspan="4"><%= f.date_select(:dataaquisicao, :order => [:day, :month, :year], :start_year => (Date.today.year)-20) %></td>
            </tr>
            <tr>
               <td align="left"><b>Localização:</b></td>
               <td align="left"> <%= f.text_field :localguardado, :size =>15%></td>
               <td align="right"><b>Unidade:</b></td>
               <td align="left" colspan="5"><%= f.collection_select  :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
            </tr>
            <tr >
               <td align="left" valign="top"><b>Observações:</b></td>
               <td align="left" colspan="7  "><%= f.text_area(:obs, :cols =>"85", :rows => "2") %></td>
            </tr>
       </table>
      </fieldset>
      <table>
          <tr>
            <div id='Certeza'>
               <td align="left" width="8%"><%= f.submit "Salvar" %></td>
            </div>
            <% end %>
            <td align="left" ><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
          </tr>
      </table>
 </table>
</font>



