<table class="tabelas" width="70%" align="center">
  <tr>
    <td align="left">
      <h1>NOVO USUÁRIO</h1>
    </td>
  </tr>
  <tr>
    <td>
      <fieldset><legend><font  size=4>Usuário</font></legend>
      <font  size="2">
         <table>
           <% @user.password = @user.password_confirmation = nil %>
           <%= error_messages_for :user %>
           <% form_for :user, :url => users_path do |f| -%>
              <tr>
                  <td align="left">Usuário:</td>
                  <td align="left"><%= f.text_field :login %></td>
                </tr>
                <tr>
                  <td align="left">Unidade:</td>
                  <td align="left"><%= f.collection_select :unidade_id,Unidade.all,:id,:nome, :include_blank => true %></td>
                <tr>
                </tr>
                <tr>
                  <td align="left">e-mail:</td>
                  <td align="left"><%= f.text_field :email %></td>
                 <tr>
                   <td align="left">Senha:</td>
                   <td align="left"><%= f.password_field :password %></td>
                 </tr>
                 <tr>
                   <td align="left"  width="22%">Confirma Senha:</td>
                   <td align="left"><%= f.password_field :password_confirmation %></td>
                 </tr>
         </table>
       </font>
     </fieldset>
        <table>
          <td width="8%"><%= submit_tag 'Cadastrar' %></td>
          <td align="left"><%= button_to 'Voltar', homes_path, {:method => "get"}  %></td>
        </table>
     <% end -%>

        </td>
</tr>
</table>
<br/>

