      <table >
          <tr>
              <td align="left"><b>Tombo (SEDUC):</b></td>
              <td align="left" colspan="5"><font color="blue"><b>LV-<%=h @livro.id %></b></font>
                   -- <b>Tombo(Local):</b><%= f.text_field :tombo, :size =>8 %>
                   <b>ISBN:</b><%= f.collection_select  :isbn_id, @isbns, :id, :nisbn, :include_blank => ' -- Selecione -- ' %>
                 <%= observe_field 'livro_isbn_id',
                       :update => "lista",
                       :url    => { :action => 'novo_isbn' },
                       :with   => 'livro_isbn_id' %>
           </tr>
             <tr>
               <td align="left"><b> Título:</b></td>
               <td align="left" colspan="3" ><%=h @isbn.titulo %></td>
              <td align="left" colspan="3"> <font color="red"><b> <u>OBS:</u> Se o título iniciar com artigo definido NÃO cadastrar o artigo. </b>
              <br/><b> Ex: "O sítio do Pica-Pau Amarelo", <br/> cadastrar "Sitio do Pica-Pau Amarelo"</b></font></td>
            </tr>
            <tr>
              <td align="left"><b>Coleção:</b></td>
              <td align="left" colspan="2"><%=h @isbn.colecao%>
              <td align="left" colspan="2"><b>Edição: </b><%=h @isbn.edicao %></td>
              <td align="left" colspan="2"><b>Data Edição:</b><%=h @isbn.dataedicao.strftime("%Y") %></td>
             </td>
           </tr>
           <tr>
               <td align="left"><b> Autor:</b></td>
               <td align="left" colspan="6" ><%=h @isbn.autor %></td>

           </tr>
           <tr>
               <td align="left"><b>Editora:</b></td>
               <td align="left" colspan="7" ><%=h @isbn.editora.nome %>
                    <b> Local Edição:</b><%=h @isbn.localedicao %>
               </td>
           </tr>
           <tr>
               <td align="left"><b> Área:</b></td>
               <td align="left" colspan="7" ><%= f.collection_select  :area_id, @areas, :id, :nome, :include_blank => ' -- Selecione -- ' %>
           <tr>
               <td align="left"><b> Assunto(1):</b></td>
               <td align="left" colspan="7" ><%= f.collection_select  :assunto1, @assuntos, :nome, :nome, :include_blank => ' -- Selecione -- ' %>
                   <b> Assunto(2):</b><%= f.collection_select  :assunto2, @assuntos, :nome, :nome, :include_blank => ' -- Selecione -- ' %>
                   <b> Assunto(3):</b><%= f.collection_select  :assunto3, @assuntos, :nome, :nome, :include_blank => ' -- Selecione -- ' %>
              </td>
           </tr>
           <tr >
               <td align="left"><b>Resumo:</b></td>
               <td align="left" colspan="7  "><%= f.text_area(:resumo, :cols =>"97", :rows => "2") %></td>
            </tr>
            <tr>
             <td align="left"><b>Forma Aquisição:</b></td>
              <td align="left" colspan="2"><%= f.select :aquisicao, FORMAAQUISICAO.sort {|e0,e1| e0[0] <=> e1[0]}, :include_blank => '---Selecione---'%></td>
              <td align="right"><b>Data Aquisição:</b></td>
               <td align="left" colspan="4"><%= f.date_select(:dataaquisicao, :order => [:day, :month, :year], :start_year => (Date.today.year)-20) %></td>
            </tr>
            <tr>
               <td align="left"><b>Localização:</b></td>
               <td align="left"> <%= f.text_field :localguardado, :size =>15%></td>
               <td align="right"><b>Unidade:</b></td>
               <td align="left" colspan="5"><%= f.collection_select  :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
            </tr>
            <tr >
               <td align="left"><b>Observações:</b></td>
               <td align="left" colspan="7  "><%= f.text_area(:obs, :cols =>"97", :rows => "2") %></td>
            </tr>
       </table>
