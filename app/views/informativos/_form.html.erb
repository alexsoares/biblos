<% form_for(@informativo) do |f| %>
  <%= f.error_messages %>
  <font  size="2">
<table class="tabelas" width="100%" align="center">
  <tr>
   <td colspan="2" align="left">
     <font  size=4><b> INFORMATIVO</b></font>
   </td>
  </tr>
     <tr>
      <td width="50%">
          <table width="100%">
            <tr>
              <td width="52%" valign="top">
                <fieldset>
                  <legend><font  size=3>Período de exibição</font></legend>
                    <table >
                      <tr>
                        <td align="left"><%= f.label :starts_at,"De:" %></td>
