                      </tr>
                      <tr>
                        <td align="left"><%= f.label :ends_at,"Até" %></td>
                        <td align="left"><%= f.datetime_select :ends_at %></td>
                       </tr>
                     <tr></tr>
                     <tr></tr>
                     </table>
                </fieldset>
              </td>
              <td valign="top" width="50%">
                <fieldset>
                  <legend><font  size=4>Informação a ser repassada</font></legend>
                  <%= f.text_area :mensagem, :rows => 4, :cols => 48 %>
                </fieldset>
              </td>

            </tr>

        </table>
          <table>
            <tr>
              <td><%= f.submit 'Salvar' %></td>
              <% end %>
              <td align="left" > <%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
           </tr>
            </table>
       </table>
