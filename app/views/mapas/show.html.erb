<font size="2">
<table  class="tabelas" width="60%"align="center">
   <tr>
      <td colspan="2" align="left">
         <font  size=5 color="black"> <b>MAPA</b></font>
      </td>
  </tr>
  <tr>
   <td>
     <fieldset><legend><font  size=4> Dados</font></legend>
      <table>
        <tr>
           <td align="left"><b>Tombo (SEDCUC):</b></td>
           <td align="left">  <%=h @mapa.id %></td>
        </tr>
        <tr>
           <td align="left"><b>Tombo (Local):</b></td>
           <td align="left">  <%=h @mapa.tombo %></td>
        </tr>
        <tr>
          <td align="left"><b>Tipo:</b></td>
          <td align="left">  <%=h @mapa.tipo %></td>
       </tr>
       <tr>
         <td align="left"><b>Título:</b></td>
         <td align="left"><%=h @mapa.titulo %></td>
       </tr>
       <tr>
         <td align="left"><b> Formato:</b></td>
         <td align="left">  <%=h @mapa.formato %></td>
       </tr>
       <tr>
         <td align="left"><b>Data:</b></td>
         <td align="left">  <%=h @mapa.data.strftime("%Y") %></td><p>
       </tr>
       <tr>
         <td align="left"><b> Editora:</b></td>
         <td align="left">  <%=h @mapa.editora.nome%></td>
       </tr>
       <tr>
         <td align="left"><b>Forma Aquisição:</b></td>
         <td align="left"><%=h @mapa.aquisicao %></td>
       </tr>
       <tr>
         <td align="left"><b> Data Aquisição:</b></td>
         <td align="left">  <%=h @mapa.dataaquisicao.strftime("%d de %B de %Y") %></td><p>
       </tr>
       <tr>
         <td align="left"><b>Localização:</b></td>
         <td align="left">  <%=h @mapa.localguardado%></td><p>
       </tr>
      <tr>
         <td align="left"><b>Unidade:</b></td>
         <td align="left">   <%=h @mapa.unidade.nome %></td>
      </tr>
      <tr>
         <td valign="top" align="left"><b>Observações:</b></td>
         <td align="left">  <%=h @mapa.obs %></td>
      </tr>
    </table>
    </fieldset>
     <div class="botao">
      <table>
        <tr>
          <td align="left" width="8%"><%= button_to 'Voltar', homes_path, {:method => "get"} %></td>
           <% if current_user.has_role?('administrador') or current_user.has_role?('bibliotecario') %>
             <td align="left" width="8%"> <%= button_to('Editar', {:action => "edit", :id => @audiovisuai}, :method => "get") %></td>
             <td align="left" width="8%"> <%= button_to'Cadastrar', new_mapa_path, {:method => "get"}%></td>
           <%end%>
          <td align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
        </tr>
      </table>
     </div>
   </td>
  </tr>
 </table>
