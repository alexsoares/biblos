<table class="tabelas" align="center" width="50%">
 <tr>
     <td colspan="2" align="left">
       <font  size=5 color="black"> <b>AUTORES</b></font>
    </td>
 </tr>
 <tr>
   <td>
    <font  size="2">
     <table width="100%"  >
       <tr>
         <td width="50%" valign="top">
           <% form_for(@autor) do |f| %>
            <fieldset><legend><font  size=4> Cadastrar Autor</font></legend>
               <table>
                 <tr>
                   <td valign="top"><font color="red"><b><u>OBSERVAÇÃO:</u></b></font>
                   <td colspan="2"><font color="red"><b>Digitar o nome e aguardar o sistema consultar se o Autor já está cadastrado antes de clicar o botão SALVAR</b></font></td>
                 </tr>
                 <tr>
                   <td width="20%"align="left" colspan="3"><b>Nome:</b><%= f.text_field :nome, :size => 35%>
                     <%= observe_field :autor_nome,
                       :with => :autor_nome,
                       :url => { :action => 'mesmo_nome' } %>
                    </td>
                 </tr>
                <tr>
                  <td colspan="3">
                      <font color="red"><b><div id='nome_aviso'></div></b></font>
                  </td>
                </tr>
                 <tr>
                  <div class="botao">
                    <td align="right"width="1%" >
                           <div id='Certeza'>
                               <%= f.submit "Salvar" %>
                           </div>
                    </td>
                         <% end %>
                     <td align="left"width="1%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
                     <td align="left"><%= button_to 'Cadastrados', autors_path, {:method => "get"}%></td>
                  </div>
                </tr>
               </table>
             </fieldset>
            <br/>
         </td>
        </tr>
       </table>
      </font>
    </td>

</table>
