      <td align="left">
         <font  size=5><b> IDENTIFICADORES</b></font>
      </td>
   </tr>
   <tr>
     <td colspan="2">
        <br/>
        <div class="botao">
        <table width="100%" align="center">
          <tr>
             <td width="6%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
             <td width="6%" align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
             <td align="right">
               <div class="botao">
                <table>
                  <tr>
                    <% form_tag identificacaos_path, :method => 'get' do %>
                     <td align="right"><font size="4"> Digitar Titulo:</font>
                       <%= text_field_tag :search, params[:search] %>
                       <%= submit_tag "Filtrar", :titulo => nil %>
                     </td>
                    <% end %>
                  </tr>
                </table>
                </div>
             </td>
         </tr>
         <tr>
           <% if  $var == 0 then %>
             <td align="left" colspan="4"><%= will_paginate @identificacaos %></td>
           <%end%>
         </tr>
       </table>
       <br/>
       </div>
       <font  size="2">
       <table border="2" width="100%">
          <tr>
            <th>Código</th>
            <th>Título</th>
            <th>Subtítulo</th>
            <th>Autor</th>
            <th>Observações</th>
          </tr>
        <% @identificacaos.each do |identificacao| %>
          <tr>
            <td><%=h identificacao.codigo %></td>
            <td><%=h identificacao.titulo %></td>
            <td><%=h identificacao.subtitulo %></td>
            <td><%=h identificacao.autor %></td>
            <td><%=h identificacao.obs %></td>
         </tr>
         <tr>
          <td colspan="12">
           <div class="botao">
            <table >
             <td><%= button_to('Exibir',{:action => "show", :id =>identificacao}, :method => "get") %></td>
                <% if current_user.has_role?('administrador')%>
                   <td> <%= button_to('Editar',{:action => "edit", :id =>identificacao}, :method => "get") %></td>
                   <td><%= button_to('Excluir',{:action => "destroy", :id =>identificacao}, :confirm => 'Confirma exclusão?', :method => "delete")%></td>
                <%end%>
             </table>
           </div>
           </td>
        </tr>
        <% end %>
       </table>
       <div class="botao">
         <table width="100%" align="left">
          <br/>
          <tr>
              <td width="8%"><%= button_to 'Voltar', homes_path, {:method => "get"}%></td>
              <td align="left"><input type="Button" Value="Imprimir" onclick="javascript:window.print()"></td>
              <% if  $var == 0 then %>
                 <td align="left" colspan="3"><%= will_paginate @isbn %></td>
              <%end%>

        </table>
        </div>
     </font>
  </table>
