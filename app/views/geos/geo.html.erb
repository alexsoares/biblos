<script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
<script src="/javascripts/jquery.geolocation.js" type="text/javascript"></script>
<script language="Javascript">
      $(document).ready(function() {
      var firstAddress = $("#addressList li:first a").html();
      $("#mapCanvas").geolocate(firstAddress);
      $("#addressList li a").click(geolocateAddress);
    });

    function geolocateAddress(event) {
      var address = $(this).html();
      var address2 = "Rua das Imbuias,230,Americana,SP,Brasil";
      $("#mapCanvas").geolocate([address,address2]);
    }
</script>
<font size="2">
  <div id="container">
    <div id="mapCanvas">
      Loading Map
   </div>
   <%if params[:id].nil?%>
     <table width="100%" >
        <tr>
           <% form_tag geo_path, :method => 'get' do %>
              <td align="right" >
                    <%= label :id, "Unidade" %>
                    <%= collection_select :unit, :id, @unidades, :id, :nome, :include_blank => true%>
             </td>
              <td>
                 <input type="image" src="/stylesheets/images/buscar1.png" title="Buscar">
             </td>
         <%end%>
      </tr>
   </table>
  <%end%>
  <table width="100%">
     <td align="right">
        <div id="addressList">
          <li><a style="color:blue"><%= @unidade ? "#{@unidade.endereco},#{@unidade.bairro},#{@unidade.num},Americana,SP,Brasil" : "Rua das Imbuias, Jardim São Paulo,230,Americana,SP,Brasil" %></a></li>
             <!--<li><% @unidade ? "#{@unidade.endereco},#{@unidade.bairro},#{@unidade.num},Americana,SP,Brasil" : "Rua das Imbuias, Jardim São Paulo,230,Americana,SP,Brasil" %></li>-->
       </div>
    </td>
</table>
</div>
</font>